<core:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="my.app.controller.meals"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="mealsPage" title="Meals" showNavButton="true"
		navButtonPress="onNavButtonPressed">
		<content>
			<Table id="meals" inset="false" items="{meals}">
				<headerToolbar>
					<Toolbar>
						<Title text="Meals" level="H2" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Meal" />
					</Column>
					<Column>
						<Text text="Description" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{MealNo}" />
							<Text text="{items}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</core:View>