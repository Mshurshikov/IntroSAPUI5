<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:SimpleForm title="Company adress"
		visible="{/isCompany}">
		<f:content>
			<Label text="Company" />
			<Text text="{/name} {/name2}" />
			<Label text="Street" />
			<Text text="{/street} {/number}" />
			<Label text="City" />
			<Text text="{/zip} {/city}" />
			<Label text="Country" />
			<Text text="{/country}" />
			<Label text="VAT No" />
			<Text text="{/vat}" />
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>