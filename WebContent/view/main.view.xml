<core:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form" controllerName="controller.main"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
			<Button text="Click Me" press="onButtonPressed" />
			<Text id="output" />
			<Text id="BindMode" />
			<Input 	id="InputField" 
					value="{/value}"
					description="{/value}"
					valueLiveUpdate="true"
					width="50%"/>
			<!--Resource Model -->
			<Text 	text="{i18n>TextCompCode}"
					class="sapUiSmallMargin" />
			<Text text="{i18n>TextMasterData}" />
			
			<!-- XML Binding, Root <week> is ommitted -->
			<Table id="XMLTable" items="{/days}"> 
				<headerToolbar>
					<Toolbar>
						<Title text="XML Binding" level="H2" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Tag" />
					</Column>
					<Column>
						<Text text="Kommentar" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{day}" />
							<Text text="{day/@comment}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			
			<!-- JSON Binding  -->
			<Table id="JSONTable" items="{/week}">
				<headerToolbar>
					<Toolbar>
						<Title text="JSON Binding" level="H2"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Tag" />
					</Column>
					<Column>
						<Text text="Kommentar" />
					</Column>
					<Column>
						<Text text="Bewertung" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{we_day}" />
							<Text text="{we_comment}" />
							<RatingIndicator value="{we_rating}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</core:View>

